@model NcPac_Project2.Models.MeetingDocument

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron jumbotron-fluid margin-bottom" style="background-color:#0077be; color:#fff;">
    <div class="container">
        <h1 class="display-4">Edit Document</h1>
        <p class="lead">Change or Update details</p>
    </div>
</div>
<div class="container">
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>
                <legend>Document Details</legend>
                <hr />
                <span class="requiretop"><b>NOTE:</b> Fields marked by "*" are required fields</span>
                <br />
                <div class="form-group">
                    <label asp-for="MeetingID" class="control-label"></label>
                    <select asp-for="MeetingID" class="form-control" asp-items="ViewBag.MeetingID" readonly></select>
                    <span asp-validation-for="MeetingID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="FileName" class="control-label"></label>
                    <input asp-for="FileName" class="form-control" readonly/>
                    <span asp-validation-for="FileName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MimeType" class="control-label"></label>
                    <input asp-for="MimeType" class="form-control" readonly />
                    <span asp-validation-for="MimeType" class="text-danger"></span>
                </div>
            </fieldset>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="margin-top">
        <a href='@ViewData["returnURL"]'>Back to List</a>
    </div>
</div>
