@model NcPac_Project2.Models.Committee

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron jumbotron-fluid margin-bottom" style="background-color:#0077be; color:#fff;">
    <div class="container">
        <h1 class="display-4">Edit Committee</h1>
        <p class="lead">Change or Update details</p>
    </div>
</div>
<div class="container">
    <div class="row">


        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommitteeID" />
            <fieldset>
                <legend>Committee Details</legend>
                <hr />
                <span class="requiretop"><b>NOTE:</b> Fields marked by "*" are required fields</span>
                <br />

                <div class="form-group">
                    <label asp-for="CommitteeName" class="control-label"></label><span class="requirefield">*</span>
                    <input asp-for="CommitteeName" class="form-control" placeholder="Name - E.g. Computer Programming" />
                    <span asp-validation-for="CommitteeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DivisionID" class="control-label"></label><span class="requirefield">*</span>
                    <select asp-for="DivisionID" class="form-control" asp-items="ViewBag.DivisionID">
                        <option value="">Select a Division</option>
                    </select>
                    <span asp-validation-for="DivisionID" class="text-danger"></span>
                </div>
               @*<div class="form-group">
                    <label asp-for="MemberID" class="control-label"></label>
                <input asp-for="MemberID" class="form-control" />
                <span asp-validation-for="MemberID" class="text-danger"></span>
                </div>*@

            </fieldset>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>

    <div class="margin-top">
        <a href='@ViewData["returnURL"]'>Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
